@model Teste.Direcional.WEB.Models.ContatoViewModel

@{
    ViewBag.Title = "Contatos";
    ViewBag.ExibirBreadcrumb = true;

}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h1>Contatos</h1>
                </div>
            </div>
        </div>
    </div>

    @{

        try
        {
            if (@TempData["MensagemResetarInvalido"] != null)
            {
                <div class="alert alert-danger">
                    <strong>Atenção:</strong>@TempData["MensagemResetarInvalido"]
                </div>
            }
            else if (@TempData["MensagemResetarSalvo"] != null)
            {
                <div class="alert alert-success">
                    <strong>Atenção:</strong>@TempData["MensagemResetarSalvo"]
                </div>
            }
        }
        catch { }
    }
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    @using (Html.BeginForm("Cadastrar", "Contato", FormMethod.Get))
                    {
                        <button id="btnUsuario" type="submit" class="btn button w-150 rigt">
                            Cadastrar Novo Contato
                        </button>
                    }
                </div>                
            </div>
        </div>
    </div>    
</div>

<style>
    .button {
        background-color: #004691;
        border-color: #004691;
        color: #FFF;
    }

    .buttonEditar {
        color: #fff;
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>
